<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".standard_periodic_services">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="?attr/actionModeCloseDrawable"
            android:drawablePadding="20dp"
            android:drawableTint="#0C0B0B"
            android:text="Standard Service"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/basi"
            android:layout_marginTop="20dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="20dp"
            android:drawableTint="#0C0B0B"
            android:text="Standard Service"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/baseline_timer_24"
            android:drawablePadding="10dp"
            android:drawableTint="#FF0A0A"
            android:text="Takes 6 Hours"
            android:textColor="@color/black"
            android:textSize="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/baseline_shield_24"
            android:drawablePadding="10dp"
            android:drawableTint="#FF0A0A"
            android:text="1,000 Kms or 1 Month Warranty"
            android:textColor="@color/black"
            android:textSize="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/baseline_thumb_up_24"
            android:drawablePadding="10dp"
            android:drawableTint="#FF0A0A"
            android:text="Every 10,000 Kms or 6 Month (Recommended)"
            android:textColor="@color/black"
            android:textSize="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="20dp"
            android:drawableTint="#0C0B0B"
            android:text="What's Include"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="20dp"
            android:drawableTint="#0C0B0B"
            android:text="Essential Services"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="13dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center|top">

                            <ImageView
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:background="@drawable/oil"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:drawableTint="#0C0B0B"
                            android:text="Engine Oil                     Replacement "
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center|top">

                            <ImageView
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:background="@drawable/oil_filter" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="48dp"
                            android:drawableTint="#0C0B0B"
                            android:text="Oil Filter   replacement "
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center|top">

                            <ImageView
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:background="@drawable/air"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="42dp"
                            android:drawableTint="#0C0B0B"
                            android:text="Air Filter          Cleaning "
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center|top">

                            <ImageView
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:background="@drawable/brak_fluid"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="42dp"
                            android:drawableTint="#0C0B0B"
                            android:text="Brake Fluid                Top UP "
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>



                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:drawablePadding="20dp"
            android:drawableTint="#0C0B0B"
            android:text="Performance Services"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="13dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center|top">

                            <ImageView
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:background="@drawable/coolant"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:drawableTint="#0C0B0B"
                            android:text="Coolant Top Up                     (Up to 200 ml) "
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center|top">

                            <ImageView
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:background="@drawable/hear" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="48dp"
                            android:drawableTint="#0C0B0B"
                            android:text="Heater/Spark Plugs Checking "
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center|top">

                            <ImageView
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:background="@drawable/ac_filter_rapla" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="48dp"
                            android:drawableTint="#0C0B0B"
                            android:text="Ac Filter Replacement "
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center|top">

                            <ImageView
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:background="@drawable/flue_filter_checking" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="48dp"
                            android:drawableTint="#0C0B0B"
                            android:text="Flue Filter       Checking"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>




                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:drawablePadding="20dp"
            android:layout_marginTop="20dp"
            android:drawableTint="#0C0B0B"
            android:text="Additional Services"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/brd2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/baseline_verified_24"
                android:drawablePadding="10dp"
                android:text="Wiper Fluid Replacement" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:drawableStart="@drawable/baseline_verified_24"
                android:drawablePadding="10dp"
                android:text="Battery Water Top Up"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:drawableStart="@drawable/baseline_verified_24"
                android:drawablePadding="10dp"
                android:text="Interior Vacuuming(Carpet &amp; Seats)"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/baseline_verified_24"
                android:drawablePadding="10dp"
                android:text="AC Filter Replacement"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/baseline_verified_24"
                android:drawablePadding="10dp"
                android:text="Flue Filter Checking"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/baseline_verified_24"
                android:drawablePadding="10dp"
                android:text="Brake Fluid Top Up"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/baseline_verified_24"
                android:drawablePadding="10dp"
                android:text="Wheel Alignment "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/baseline_verified_24"
                android:drawablePadding="10dp"
                android:text="Tyre Rotation"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/baseline_verified_24"
                android:drawablePadding="10dp"
                android:text="Car Wash"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#F3EFEF"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textSize="25dp"
                android:textColor="#000000"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs.9,999"
                android:textSize="25dp"
                android:layout_marginLeft="85dp"
                android:textColor="#FF0A0A"
                android:gravity="center"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/standard_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="13dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:background="@drawable/brd_btn2"
            >
        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>



</ScrollView>